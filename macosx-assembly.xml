<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>macosx-distribution</id>
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>
  <fileSets>
      <fileSet>
         <directory>${project.basedir}</directory>
         <outputDirectory>/</outputDirectory>
         <includes>            
            <include>home/bin/**</include>
            <include>home/conf/**</include>
            <include>home/lib/**</include>
            <include>home/repo/**</include>
            <include>home/*.txt</include>
            <include>home/run.sh</include>
            <include>home/setup.command</include>
            <include>base/**</include>
         </includes>
         <useDefaultExcludes>false</useDefaultExcludes>
         <excludes>
            <exclude>pom.xml</exclude>
            <exclude>minimal-assembly.xml</exclude>
            <exclude>python-assembly.xml</exclude>
            <exclude>linux-assembly.xml</exclude>
            <exclude>macosx-assembly.xml</exclude>
            <exclude>src/**</exclude>
            <exclude>log/**</exclude>
            <exclude>target/**</exclude>
            <exclude>home/target/**</exclude>
            <exclude>base/target/**</exclude>
            <exclude>**/*.DS_Store</exclude>
         </excludes>
      </fileSet>
   </fileSets>
</assembly>