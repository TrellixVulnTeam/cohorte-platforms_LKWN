<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>minimal-home-distribution</id>
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>
  <fileSets>
      <fileSet>
          <directory>${project.basedir}</directory>
          <outputDirectory>/</outputDirectory>
          <includes><include>bin/**</include></includes>
          <excludes>
            <exclude>bin/cohorte-create-node</exclude>
            <exclude>bin/cohorte-version</exclude>
          </excludes>
      </fileSet>
      <fileSet>
         <directory>${project.basedir}</directory>
         <outputDirectory>/</outputDirectory>
         <includes>            
            <include>*</include> 
            <include>conf/**</include>
            <include>felix/**</include>
            <include>lib/**</include>
            <include>repo/**</include>            
         </includes>
         <useDefaultExcludes>false</useDefaultExcludes>
         <excludes>
            <exclude>base/**</exclude>
            <exclude>target/**</exclude>            
            <exclude>pom.xml</exclude>
            <exclude>assemblies/**</exclude>
            <exclude>scripts/**</exclude>                        
            <exclude>**/*.DS_Store</exclude>
            <exclude>**/.git</exclude>
            <exclude>**/.gitignore</exclude>
         </excludes>
      </fileSet>
   </fileSets>
   <files>
    <file>
      <source>bin/cohorte-create-node</source>      
      <filtered>true</filtered>
      <outputDirectory>bin/</outputDirectory>
      <fileMode>0744</fileMode>
    </file>
    <file>
      <source>bin/cohorte-version</source>      
      <filtered>true</filtered>
      <outputDirectory>bin/</outputDirectory>
      <fileMode>0744</fileMode>
    </file>
  </files>
</assembly>